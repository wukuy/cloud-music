@import '~@assets/css/define.styl';

.p-recommend{
    padding: 0 30px;
    .p-banner{
        margin: 20px 0;
        .c-carousel-item{
            background: #f1f1f1;
            height: 100%;
            img{
                max-height: 400px;
                min-height: 200px;
            }
        }
    }
    .p-list{
        padding: 10px 0;
        .p-item{
            cursor: pointer;
            .p-name{
                width: 100%;
                height: 32px;
                line-height: 20px;
                color: #333;
            }
        }
    }
}