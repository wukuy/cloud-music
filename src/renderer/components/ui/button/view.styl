@import '../../styles/define.styl';

$prefix = c-button;

$setBtnColor($border, $color, $bg) {
    background: $bg;
    color: $color;
    border-color: $border;
    &:hover{
        color: $color;
        background: lighten($bg, 20%);
        border-color: lighten($border, 20%);
    }
    &:active{
        color: $color;
        background: darken($bg, 10%);
        border-color: darken($border, 10%);
    }
}

.{$prefix}{
    border-width: 1px;
    border-style: solid;
    font-size: 12px;
    height: 36px;
    padding: 0 20px;
    border-radius: $border-radius;
    transition: $transition-time all;
    cursor: pointer;
    outline: 0;
    border-color: $btn-defualt-border;
    background: $btn-defualt-bg;
    color: $btn-default-text;
    &:hover{
        color: lighten($primary-color, 20%);
        border-color: lighten($primary-color, 20%);
    }
    &:active{
        color: darken($primary-color, 10%);
        border-color: darken($primary-color, 10%);
    }

    &-primary{
        $setBtnColor($btn-primary-border, $btn-primary-text, $primary-color);
    }

    &-text{
        border: none;
        &:hover{
            color: $primary-color;
        }
        &:active{
            color: $primary-color;
        }
    }

    &-info{
        $setBtnColor($btn-info-border, $btn-info-text , $btn-info-bg);
    }

    &-circle{
        border-radius:  @height;
        padding: 0;
        min-width: @height;
        text-align: center;
    }

    &-disabled[disabled]{
        color: $btn-disabled-text;
        background-color: $btn-disabled-bg;
        border-color: $btn-disabled-border;
        cursor: not-allowed;
    }
    
    &-small{
        height: 24px;
        padding: 0 6px;
    }
    &-large{
        height: 68px;
    }
    &-long{
        width: 100%;
    }
    &-ghost{
        background: rgba(255,255,255,0);
    }
}