@import '~@assets/css/define.styl';

.w-play-wrap{
    height: 50px;
    box-shadow: 0px -1px 10px $border-color;
    background: #f5f5f7;
    display: flex;
    align-items: center;
    padding: 0 20px 0 18px;
    .w-play-ctrl{
        .w-up,.w-play,.w-next{
            float: left;
            margin: 0 12px;
            text-align: center;
        }
    }
    .w-play-bar{
        flex: 1;
    }
    .w-menu{
        >*{
            display: inline-block;
        }
    }
}